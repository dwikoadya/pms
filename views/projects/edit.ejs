<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Project</title>
    <% include ../partials/headers %>
</head>
<body style="font-family: Arial, Helvetica, sans-serif;">
    <% include ../partials/navbar %>

    <h1 style="margin-top: 20px;">Edit Project</h1>
    <hr>

    <form method="POST">
        <div class="form-group row">
          <label for="editName" class="col-sm-2 col-form-label" >Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="editName" placeholder="Project Name" name="editName" value="<%= projectName.name%>">
          </div>
        </div>
        

        <div class="form-group row">
          <div class="col-sm-2">Members</div>
          <div class="col-sm-10">
            <% members.forEach((element, index) => {%>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="editMembers" id = "members<%= index + 1%>" value="<%= element.userid%>" <%= memberData.includes(element.userid) ? 'checked' : '' %>>
              <label class="form-check-label" for="members<%= index + 1%>">
                <%= element.fullname %>
              </label>
            </div>
            <%})%>
          </div>
        </div>


        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </div>
      </form>
</body>
</html>
<!DOCTYPE html>
<html>

<head>
    <title>PMS Users</title>
    <!-- <link rel="stylesheet" href=""> -->
    <% include ../partials/headers %>
</head>

<body style="font-family: Arial, Helvetica, sans-serif;">
    <header>
        <% include ../partials/navbar %>
    </header>

    <h1>Users</h1>
    <hr>
    <h2 style="font-family: Arial, Helvetica, sans-serif;">Filters</h2>

    <!-- ========================================Filters===================================== -->

    <form method="GET" id="filterForm">
        <input type="hidden" name="page" value="1">
        <div class="row">
            <div class="col" style="margin-left: 20px;">
                <div class="custom-control custom-checkbox mb-3" style="margin-top: 7px;">
                    <input class="custom-control-input" type="checkbox" id="id" name="cekid">
                    <label class="custom-control-label" for="id">
                        ID
                    </label>
                </div>
            </div>
            <div class="col-10">
                <div class="form-group" style="margin-right: 20px;">
                    <input type="text" class="form-control" id="id" placeholder="ID" name="usersId">
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col" style="margin-left: 20px;">
                <div class="custom-control custom-checkbox mb-3" style="margin-top: 7px;">
                    <input class="custom-control-input" type="checkbox" id="name" name="cekname">
                    <label class="custom-control-label" for="name">
                        Name
                    </label>
                </div>
            </div>
            <div class="col-10">
                <div class="form-group" style="margin-right: 20px;">
                    <input type="text" class="form-control" id="name" placeholder="Name" name="usersName">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col" style="margin-left: 20px;">
                <div class="custom-control custom-checkbox mb-3" style="margin-top: 7px;">
                    <input class="custom-control-input" type="checkbox" id="email" name="cekemail">
                    <label class="custom-control-label" for="email">
                        Email
                    </label>
                </div>
            </div>
            <div class="col-10">
                <div class="form-group" style="margin-right: 20px;">
                    <input type="email" class="form-control" id="email" placeholder="Email" name="usersEmail">
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col" style="margin-left: 20px" ;>
                <div class="custom-control custom-checkbox mb-3" style="margin-top: 7px;">
                    <input class="custom-control-input" type="checkbox" id="position" name="cekposition">
                    <label class="custom-control-label" for="position">
                        Position
                    </label>
                </div>
            </div>
            <div class="col-10">
                <div class="form-group" style="margin-right: 20px;">
                    <select id="position" class="custom-select custom-select" name="usersPosition">
                        <option selected disabled>Choose the Position ...</option>
                        <option value="Manager">Manager</option>
                        <option value="Quality Assurance">Quality Assurance</option>
                        <option value="Software Developer">Software Developer</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col" style="margin-left: 20px" ;>
                <div class="custom-control custom-checkbox mb-3" style="margin-top: 7px;">
                    <input class="custom-control-input" type="checkbox" id="type" name="cektype">
                    <label class="custom-control-label" for="type">
                        Type Job
                    </label>
                </div>
            </div>
            <div class="col-10">
                <div class="form-group" style="margin-right: 20px;">
                    <select id="position" class="custom-select custom-select" name="usersType">
                        <option selected disabled>Choose the Type Job ...</option>
                        <option value="FullTime">Full Time</option>
                        <option value="PartTime">Part Time</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="container" style="margin-left: 20px;">
            <button type="submit" class="btn btn-primary">Search</button>
            <a href="/users">
                <button type="button" class="btn btn-primary" id="reset">Reset</button>
            </a>
        </div>
    </form>
    <div>
        <br><br><br>
        <h2 style="font-family: Arial, Helvetica, sans-serif;">Options</h2>
    </div>

    <!-- ========================================Option====================================== -->
    <form action="" method="POST">
        <div class="form-group row">
            <div class="col-sm-2">Columns</div>
            <div class="col-sm-10">


                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="cid" name="checkid" value="true"
                        <%= option.Id ? `checked` : `` %>>
                    <label class="form-check-label" for="cid">
                        ID
                    </label>
                </div>


                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="cname" name="checkname" value="true"
                        <%= option.Name ? `checked` : `` %>>
                    <label class="form-check-label" for="cname">
                        Name
                    </label>
                </div>


                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="cemail" name="checkemail" value="true"
                        <%= option.Email ? `checked` : `` %>>
                    <label class="form-check-label" for="cemail">
                        Email
                    </label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="cposition" name="checkposition" value="true"
                        <%= option.Position ? `checked` : `` %>>
                    <label class="form-check-label" for="cposition">
                        Position
                    </label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="ctype" name="checktype" value="true"
                        <%= option.Type ? `checked` : `` %>>
                    <label class="form-check-label" for="ctype">
                        Type Job
                    </label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="crole" name="checkrole" value="true"
                        <%= option.Role ? `checked` : `` %>>
                    <label class="form-check-label" for="crole">
                        Role
                    </label>
                </div>

            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Apply</button>
            </div>
        </div>
    </form>

    <!-- =========================================List====================================== -->

    <table class="table table-striped">
        <thead>
            <tr>
                <th <%= option.Id ? `` : `hidden` %>>ID</th>
                <th <%= option.Name ? `` : `hidden` %>>Name</th>
                <th <%= option.Email ? `` : `hidden` %>>Email</th>
                <th <%= option.Position ? `` : `hidden` %>>Position</th>
                <th <%= option.Type ? `` : `hidden` %>>Type Job</th>
                <th <%= option.Role ? `` : `hidden` %>>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(element => {%>
            <tr>
                <td <%= option.Id ? `` : `hidden` %>><%= element.userid %></td>
                <td <%= option.Name ? `` : `hidden` %>><%= element.fullname %></td>
                <td <%= option.Email ? `` : `hidden` %>><%= element.email %></td>
                <td <%= option.Position ? `` : `hidden` %>><%= element.position %></td>
                <td <%= option.Type ? `` : `hidden` %>><%= element.type %></td>
                <td <%= option.Role ? `` : `hidden` %>><%= element.role %></td>
                <td>
                    <a href="/users/edit/<%= element.userid %>">
                        <button class="btn btn-success">Edit</button>
                    </a>
                    <a href="/users/delete/<%= element.userid %>">
                        <button class="btn btn-danger" onclick="return confirm('Confirm to Delete?');">Delete</button>
                    </a>
                </td>
            </tr>
            <%})%>
        </tbody>
    </table>
    <!-- ===========================================Pagination================================== -->
    <div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item <%= page==1 ? 'disabled' : ''%>">
                    <a class="page-link"
                        href="/users<%= url.replace(`?page=${parseInt(page)}`,`?page=${ parseInt(page) - 1}`)%>">Previous</a>
                </li>
                <%for(let i = 1; i <= pages; i++){%>
                <li class="page-item <%= (i == page) ? 'active' : '' %>">
                    <a class="page-link"
                        href="/users<%= url.replace(`?page=${parseInt(page)}`,`?page=${i}`)%>"><%= i %></a>
                </li>
                <%}%>
                <li class="page-item <%= page==pages ? 'disabled' : '' %>"><a class="page-link"
                    href="/users<%= url.replace(`?page=${parseInt(page)}`,`?page=${parseInt(page) + 1}`) %>">Next</a>
                </li>
            </ul>
        </nav>
    </div>

    <a href="/users/add">
        <button class="btn btn-primary">Add</button>
    </a>

</body>

</html>